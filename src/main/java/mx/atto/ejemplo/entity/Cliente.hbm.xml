<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="mx.atto.ejemplo.entity">
  <class table="clientes" name="Cliente">
    <id name="id" type="java.lang.Integer">
      <generator class="native"/>
    </id>
      <property name="codigoClientes" column="codigo_clientes" type="string"/>
      
      <one-to-one name="categoria" foreign-key="cat_id" class="mx.atto.ejemplo.entity.Categoria"/>

      <one-to-one name="tercero" foreign-key="ter_id" class="mx.atto.ejemplo.entity.Tercero"/>
  </class>
</hibernate-mapping>
